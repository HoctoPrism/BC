<section class="container-fluid g-0">
    <div class="d-flex flex-column py-5 text-white color_form">
        <div class="text-center mb-md-5 md-3">
            <h1>
                {% if form.nameproduct.vars.value != null %}
                    Modifier
                {% endif %} 
                {% if form.nameproduct.vars.value is empty %}
                    Ajouter
                {% endif %}
                un produit
            </h1>
            <p>Vous pouvez ajouter un nouveau produit via le formulaire ci dessous.</p>
        </div>
        {{ form_start(form, {'attr': {'class': 'd-flex flex-column'}, 'method': 'POST', 'enctype': "multipart/form-data"}) }}
            <div class="row row-cols-2 m-md-4 m-2 p-md-3 p-2 text-white bg-secondary rounded-3">
                <div class="col-lg-6 col-12">
                    <div class="mb-3">
                        {{ form_label(form.nameproduct, "Nom du produit", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nameproduct, {'attr': {'class': 'form-control w-100 p-2 rounded-2 bg-light text-secondary'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.brandproduct, "Marque du produit", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.brandproduct, {'attr': {'class': 'form-control w-100 p-2 rounded-2 bg-light text-secondary'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.quickdescript, "Description rapide du produit : ", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.quickdescript, {'attr': {'class': 'form-control mb-3 w-100 p-2 rounded-2 text-secondary bg-light text-secondary'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.htproduct, "Prix HT du produit : ", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.htproduct, {'attr': {'class': 'form-control bg-light text-secondary'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.qtyproduct, "Poids du produit en kg : ", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.qtyproduct, {'attr': {'class': 'form-control bg-light text-secondary'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.saveur, "Saveur du produit : ", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.saveur, {'attr': {'class': 'form-control bg-light text-secondary'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.isactive, "Produit active ? : ", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.isactive, {'attr': {'class': 'form-check-input p_checkbox'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.idcategory, "id de la catégorie : ", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.idcategory) }}
                    </div>
                    <div class="col-lg-6 col-12 mb-3">
                        {{ form_label(form.image1, "Image Principale du produit", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.image1, {'attr': {'class': 'form-control w-100 p-2 rounded-2 bg-light text-secondary'}}) }}
                    </div>
                    <div class="col-lg-6 col-12 mb-3">
                        {{ form_label(form.image2, "Deuxième image", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.image2, {'attr': {'class': 'form-control w-100 p-2 rounded-2 bg-light text-secondary'}}) }}
                    </div>
                </div>
                <div class="col-lg-6 col-12">
                    <div class="mb-3">
                        {{ form_label(form.descriptionproduct, "Première partie de la description : ", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.descriptionproduct, {'attr': {'class': 'form-control bg-light text-secondary', 'rows': "4px"}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.descriptionProduct2, "Deuxième partie de la description : ", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.descriptionProduct2, {'attr': {'class': 'form-control bg-light text-secondary'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.descriptionProduct3, "Troisième partie de la description : ", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.descriptionProduct3, {'attr': {'class': 'form-control bg-light text-secondary'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.descriptionProduct4, "Quatrième partie de la description : ", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.descriptionProduct4, {'attr': {'class': 'form-control bg-light text-secondary'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.composition, "Composition du produit : ", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.composition, {'attr': {'class': 'form-control bg-light text-secondary'}}) }}
                    </div>
                    <div class="col-lg-6 col-12 mb-3">
                        {{ form_label(form.image3, "Troisème image", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.image3, {'attr': {'class': 'form-control w-100 p-2 rounded-2 bg-light text-secondary'}}) }}
                    </div>
                    <div class="col-lg-6 col-12 mb-3">
                        {{ form_label(form.image4, "Quatrième image", {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.image4, {'attr': {'class': 'form-control w-100 p-2 rounded-2 bg-light text-secondary'}}) }}
                    </div>
                </div>
            </div>
            <!-- Le bouton envoyé -->
            <div class="d-flex align-items-center justify-content-center">
                <button class="btn btn-warning text-white w-25 align-self-center mb-4">{{ button_label|default('Envoyer') }}</button>
            </div>
        {{ form_end(form) }}
        <div class="text-center">
            {% if product.idproduct is not empty %}
                {{ include('product/_delete_form.html.twig') }}
            {% endif %}
            <a href="{{ path('product_index') }}" class="text-white fs-4 fw-bold">Retour à la liste</a>
        </div>
    </div>
</section>