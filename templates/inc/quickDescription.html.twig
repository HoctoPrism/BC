                        </svg>
                    </div>
                    <div class="ms-3 fs-4">280 avis</div>
                </div>
                <div class="col-6 d-flex align-items-end justify-content-center my-lg-0 my-2">
                    <div class="fs-1 fw-bold text-warning">{{ (product.htproduct * 1.2)|format_number({fraction_digit: 2})}}€<span class="text-secondary fs-6 fw-light">TTC</span></div>
                    
                </div>
            </div>
            <div class="col-12 perso_stock_color fs-5 fw-bold">en stock</div>
            <div class="col-12">
                <div class="d-flex mt-4">
                    <img src="{{ asset ('icon/produit/Group-camion.svg') }}" alt="logo camion">
                    <div class="ms-3">Livraison à domicile sans frais</div>
                </div>
                <div class="d-flex">
                    <img src="{{ asset ('icon/produit/Group-cb.svg') }}" alt="logo cb">
                    <div class="ms-3">Paiement sécurisé Paypal et CB  </div>
                </div>
            </div>
            <div class="col-12 d-lg-none d-flex justify-content-end">
                <a href="{{ path('basket_add', {'id': product.idproduct}) }}" class="btn btn-warning text-white btn-lg mt-4 fw-bold">Ajouter au Panier</a>
            </div>
            <div class="col-12 fw-bold mt-5 fs-5 d-lg-block d-none">
                {{ product.quickdescript }}            
            </div>
            <div class="col-12 d-lg-flex d-none justify-content-end">
                <a href="{{ path('basket_add', {'id': product.idproduct}) }}" class="btn btn-warning text-white btn-lg mt-4 fw-bold">Ajouter au Panier</a>
            </div>
        </div>
    </div>
    <div class="col-12 fw-bold mt-5 fs-5 d-lg-none d-block text-center"> {{ product.quickdescript }} </div>
</section>
{% endblock %}