{% extends "base.html.twig" %}
{% block body %}
<title>La Nimes'alerie - Ajout d'une catégorie</title>
    <section class="d-flex flex-column py-5 text-white color_form m-5 rounded-3">
        <div class="text-center">
            <h1>Ajouter une catégorie</h1>
            <p>Vous pouvez ajouter une nouvelle catégorie via le formulaire ci dessous.</p>
        </div>
        {{ form_start(addCategoryForm, {'attr': {'class': 'd-flex flex-column mx-5 my-2'}, 'method': 'POST'}) }}
            <div class="row d-flex flex-column align-items-center text-white bg-secondary rounded-3 m-4 p-3">
                <div class="col-5 mb-3">
                    {{ form_label(addCategoryForm.namecategory, "Nom de la catégorie", {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(addCategoryForm.namecategory, {'attr': {'class': 'form-control w-100 p-2 rounded-2 bg-light text-secondary'}}) }}
                </div>
                <div class="col-5 mb-3">
                    {{ form_label(addCategoryForm.idcategoryparent, "ID de la catégorie", {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(addCategoryForm.idcategoryparent, {'attr': {'class': 'form-control w-100 p-2 rounded-2 bg-light text-secondary'}}) }}
                </div>
            </div>
            <!-- Le bouton envoyé -->
            <div class="d-flex align-items-center justify-content-center">{{ form_widget(addCategoryForm.Envoyer, {'attr': {'class': 'btn btn-warning text-white w-25 align-self-center'}}) }}</div>
        {{ form_end(addCategoryForm) }}
        <div class="text-center m-5">
            <h2 class="fs-1">Liste des Catégories</h2>
            <div>Vous trouverez ici la liste des catégories et leurs id respectifs</div>
        </div>
        <div class="align-items-center justify-content-center m-4 mt-2">
            {% for animal in categories %} <!-- ici on récupère la liste de la catégorie Animal -->
                {% if animal.idcategoryparent is empty %}
                    <div class="row bg-secondary text-white rounded-3 p-3 m-3 d-flex justify-content-between align-items-center">
                        <h2 class="col-12 fw-bold text-center">{{ animal.idcategory }} - {{ animal.namecategory|upper }}</h2>

                        {% for mainCategory in categories %} <!-- ici on récupère la liste de la catégorie principale -->
                            {% if mainCategory.idcategoryparent is not empty and animal.idcategory == mainCategory.idcategoryparent.idcategory %} 
                                <div class="col d-flex flex-column m-2 align-items-center">

                                    <div> <!-- ici on récupère la liste de la catégorie secondaire -->
                                        <h3 class="fs-6 fw-bold text-warning">{{ mainCategory.idcategory }} - {{ mainCategory.namecategory|upper }}</h3>
                                        {% for subCategory in categories %}
                                            {% if subCategory.idcategoryparent is not empty and mainCategory.idcategory == subCategory.idcategoryparent.idcategory %}
                                                <div class="d-flex">
                                                    {{ subCategory.idcategory }} - {{ subCategory.namecategory }}
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>

                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </section>
{% endblock %}