<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/perso_style.css') }}">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
        {% endblock %}

        <title>{% block title %}{% endblock %}</title>
    </head>
    <body>
        {% block header %}
            {% include "inc/header.html.twig" %}
        {% endblock %}

        {% block body %}{% endblock %}

        {% block footer %}
            {% include "inc/footer.html.twig" %}
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('script/bootstrap.bundle.min.js') }}"></script>
            <script src="{{ asset('script/animSpaceProgramButton.js') }}"></script>
            <script src="{{ asset('script/inputFormFocus.js') }}"></script>
            <script src="{{ asset('script/lightbox.js') }}"></script>
        {% endblock %}

    </body>
</html>
