{% extends 'base.html.twig' %}

{% block title %}La Nimes'alerie - Changer votre mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
        <div class="container-fluid g-0">
            <h1 class="m-5 text-secondary text-center">Changer votre mot de passe</h1>
            <div class="d-flex flex-column align-items-center my-5 text-secondary">
                {{ form_start(requestForm, {'attr': {'class': 'd-flex flex-column'}, 'method': 'POST'}) }}
                <div class="mb-3"> <!-- Input du form pour l'email -->
                    {{ form_label(requestForm.emailuser, "Adresse mail", {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(requestForm.emailuser, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div>
                    <small>
                        Entrez votre adresse mail et nous vous enverrons un lien pour modifier votre mot de passe
                    </small>
                </div>
    
                <button class="btn btn-warning text-white">Envoyer le mail</button>
            {{ form_end(requestForm) }}
            </div>
        </div>

{% endblock %}
